@model int

<form method="post">
    <div class="container-xl bg-dark">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Delete Category</h2>
            </div>
            <div class="mb-3">
                <label asp-for="@Model"></label>
                <input type="text" name="id" value="@Model" />
            </div>
            <button type="submit" class="btn btn-success">Delete</button>
            <button type="submit" class="btn btn-success" asp-controller="Computers" asp-action="Index">Back</button>
        </div>
    </div>
</form>